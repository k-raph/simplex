<table class="table table-striped table-hover text-center">
    <thead>
    <tr>
        <th>Location</th>
        <th>Position</th>
        <th>Company</th>
    </tr>
    </thead>
    <tbody>
    {% for job in jobs %}
        <tr>
            <td>{{ job.location }}</td>
            <td>
                <a href="{{ route('job_show', {
                    'company': job.company|slug,
                    'id': job.id,
                    'location': job.location|slug,
                    'position': job.position|slug
                }) }}">
                    {{ job.position }}
                </a>
            </td>
            <td>{{ job.company }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
