{% extends '@admin/layout.twig' %}

{% block title %}Categories{% endblock %}

{% block content %}
    <div class="my-2">
        <h3>Categories</h3>
        <hr>
        <table class="table table-striped table-hover text-center">
            <thead>
            <tr>
                <th>Name</th>
                <th>Jobs</th>
                <th>Affiliates</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>{{ category.jobs }}</td>
                    <td>{{ category.affiliates }}</td>
                    <td class="columns">
                        <a class="btn column col-4" href="{{ route('admin_jobeet_category_edit', {id: category.id}) }}">
                            <i class="icon icon-edit"></i>
                        </a>
                        <form class="column" action="{{ route('admin_jobeet_category_delete', {id: category.id}) }}"
                              method="post">
                            {{ csrf_field() }}
                            <input type="hidden" value="DELETE" name="_method">
                            <button class="btn btn-error">
                                <i class="icon icon-delete"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
        <a class="btn" href="{{ route('admin_jobeet_category_create') }}">Create a category</a>
    </div>
{% endblock %}